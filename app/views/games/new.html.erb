<div class="container text-center mt-5">
    <h1>New game</h1>
    <div class="d-flex justify-content-center my-4">
      <% @letters.each do |letter| %>
      <div class="letter-box"><%= letter%>  </div>
      <% end %>
    </div>

    <div>
      <p class="mb-3">What is the longest word you can find?</p>
      <form action="/score" method="post" data-turbo="false" class="d-flex justify-content-center">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="text" name="word" class="form-control w-50 me-2" placeholder="Type your word here">
        <input id="grid" name="grid" type="hidden" value="<%= @letters %>">
        <button type="submit" class="btn btn-primary">Play</button>
      </form>
    </div>
  </div>
